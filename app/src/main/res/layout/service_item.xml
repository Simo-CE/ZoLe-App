    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rect_back"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/service_item_rect"
            android:backgroundTint="@color/extra_light_blue" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:text="Design"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rect_back"
            app:layout_constraintStart_toStartOf="@+id/rect_back"
            app:layout_constraintTop_toTopOf="@+id/rect_back" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:text="200DH"
            android:textColor="@color/orange"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/rect_back"
            app:layout_constraintEnd_toEndOf="@+id/rect_back"
            app:layout_constraintTop_toTopOf="@+id/rect_back" />


