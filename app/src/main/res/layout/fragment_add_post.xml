                android:id="@+id/postLevelSpinner"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!--End Post card-->


